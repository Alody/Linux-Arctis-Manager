ACTION=="remove", GOTO="local_end"

# Arctis 7 Pro
SUBSYSTEM=="usb", ATTRS{idVendor}=="1038", ATTRS{idProduct}=="220e", OWNER="${USER}", GROUP="${USER}", MODE="0664", RUN+="/bin/logger 'Arctis 7 Pro is now owned by ${USER}:${USER}'"
SUBSYSTEM=="usb", ATTRS{idVendor}=="1038", ATTRS{idProduct}=="220e", TAG+="symlink", SYMLINK+="arctischatmix", TAG+="systemd", ENV{SYSTEMD_ALIAS}="/dev/arctischatmix", RUN+="/bin/logger 'Arctis 7 Pro /dev/arctischatmix alias device added'"

# Arctis Nova Pro Wireless
SUBSYSTEM=="usb", ATTRS{idVendor}=="1038", ATTRS{idProduct}=="12e0", OWNER="${USER}", GROUP="${USER}", MODE="0664", RUN+="/bin/logger 'Arctis Nova Pro Wireless device is now owned by ${USER}:${USER}'"
KERNEL=="event*", SUBSYSTEM=="input", SUBSYSTEMS=="usb", ATTRS{idProduct}=="12e0", ATTRS{idVendor}=="1038", TAG+="symlink", SYMLINK+="arctischatmix", TAG+="systemd", ENV{SYSTEMD_ALIAS}="/dev/arctischatmix", RUN+="/bin/logger 'Arctis Nova Pro Wireless /dev/arctischatmix symlink device added'"

LABEL="local_end"
