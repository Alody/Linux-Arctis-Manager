{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build RPM",
            "type": "shell",
            "command": "rpmbuild",
            "args": [
                "-ba",
                "${workspaceFolder}/package_managers/ArctisManager.spec",
                "--define", "_version 1.6.1",
                "--define", "_release 2",
                "--define", "_localbuild 1",
                "--define", "_sourcedir ${workspaceFolder}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Builds the RPM package for your own rpm-based Linux distribution."
        }
    ]
}
